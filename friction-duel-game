document.getElementById("duel-btn").addEventListener("click", () => {
  const player = getRandomCard();
  const enemy = getRandomCard();

  const result = judge(player.power, enemy.power);

  document.getElementById("player-hand").innerText =
    `ã‚ãªãŸã®ã‚«ãƒ¼ãƒ‰ï¼š${player.name}ï¼ˆ${player.power}ï¼‰`;
  document.getElementById("enemy-hand").innerText =
    `ç›¸æ‰‹ã®ã‚«ãƒ¼ãƒ‰ï¼š${enemy.name}ï¼ˆ${enemy.power}ï¼‰`;

  document.getElementById("result").innerText = `çµæœï¼š${result}`;
});

function getRandomCard() {
  const cards = [
    { name: "æ‘©æ“¦Lv1", power: 10 },
    { name: "æ‘©æ“¦Lv2", power: 20 },
    { name: "æ‘©æ“¦Lv3", power: 30 },
    { name: "æ‘©æ“¦Lv4", power: 40 },
  ];
  return cards[Math.floor(Math.random() * cards.length)];
}

